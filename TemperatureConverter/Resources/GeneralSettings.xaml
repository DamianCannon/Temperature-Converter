<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Image resources for the different conditions -->
    <ImageSource x:Key="ImageCold">ice-112128_640.jpg</ImageSource>
    <ImageSource x:Key="ImageWarm">sunflowers-114350_640.jpg</ImageSource>
    <ImageSource x:Key="ImageHot">lava-67574_640.jpg</ImageSource>
    <ImageSource x:Key="ImageFreeze">antarctica-63056_640.jpg</ImageSource>

    <!-- Global styles for the application -->
    <Style TargetType="Window">
        <Setter Property="FontFamily" Value="Verdana, sans-serif"></Setter>
        <Setter Property="FontSize" Value="18"></Setter>
    </Style>

    <Style TargetType="Border">
        <Setter Property="Margin" Value="5"></Setter>
    </Style>

</ResourceDictionary>